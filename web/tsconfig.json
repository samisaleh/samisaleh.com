{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2016", "es2017", "es2018"],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "test/**/*.ts"
  ],
  "include": [
    "src/**/*"
  ]
}
